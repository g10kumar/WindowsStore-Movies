<Application
    x:Class="LoveQuotes.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:DT.GoogleAnalytics.Metro"
    xmlns:local="using:LoveQuotes">

    <Application.Resources>       
            
            <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <a:GoogleAnalyticsSettings x:Key="GoogleAnalytics" WebPropertyId="UA-38070832-3" />
                
            <x:String x:Key="AppName">1000 Love Quotes</x:String>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
