                        <Grid>
                            <Ellipse Stroke="Black" Width="10" Height="10"/>
                            <Image Source="ms-appx:///Assets/Filter.png" Width="45"  />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
