                <CompositeTransform x:Name="transform1"/>
            </Navigation:SfRadialMenu.RenderTransform>
            <Navigation:SfRadialMenu.Icon>
                <Grid Background="Transparent">
                    <Image Source="ms-appx:///Assets/Tools.png" Width="20" Stretch="Uniform"/>
                </Grid>
            </Navigation:SfRadialMenu.Icon>
            <Navigation:SfRadialMenuItem x:Uid="Forward_Button" x:Name="Forward_Button" Click="ForWard_move" ToolTip="" ToolTipPlacement="Top" Margin="6,-1,-6,1"  >
                <Navigation:SfRadialMenuItem.Header>
                    <Border Background="Transparent" Padding="5">
                        <StackPanel>
                            <Image Source="ms-appx:///Assets/forward.png"/>
                            <TextBlock Text="Forward" LineHeight="1" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Navigation:SfRadialMenuItem.Header>
            </Navigation:SfRadialMenuItem>
            <Navigation:SfRadialMenuItem x:Uid="TraslateDetails" x:Name="TraslateDetails" Click="Translate" ToolTip="" ToolTipPlacement="Top" Margin="-24,3,24,-3" Visibility="Collapsed"  >
                <Navigation:SfRadialMenuItem.Header>
                    <Border Background="Transparent" Padding="5">
                        <StackPanel>
                            <Image Source="ms-appx:///Assets/Text Editor.png"/>
                            <TextBlock Text="Trasnslate Title"/>
                        </StackPanel>
                    </Border>
                </Navigation:SfRadialMenuItem.Header>
            </Navigation:SfRadialMenuItem>
            <Navigation:SfRadialMenuItem x:Uid="Backward_Button" x:Name="Backward_Button" Click="BackWard_move" ToolTip="" ToolTipPlacement="Top" Margin="-22,-42,22,42"  >
