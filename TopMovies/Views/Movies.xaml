                    <Border Background="Transparent" Padding="5">
                        <StackPanel>
                            <Image Source="ms-appx:///Assets/Play.png"/>
                            <TextBlock Text="Auto Play"/>
                        </StackPanel>
                    </Border>
                </Navigation:SfRadialMenuItem.Header>
            </Navigation:SfRadialMenuItem>
            <Navigation:SfRadialMenuItem x:Uid="Pause_Button" x:Name="Pause_Button" Click="AutoStop" ToolTip="" ToolTipPlacement="Top" Margin="-24,-3,24,3" Visibility="Collapsed"   >
