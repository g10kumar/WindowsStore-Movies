<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TopMovies.Views"
    xmlns:common="using:TopMovies.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Controls.Layout" 
    xmlns:Input="using:Syncfusion.UI.Xaml.Controls.Input"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    x:Name="pageRoot"
    x:Class="TopMovies.Views.Movies"
    mc:Ignorable="d">


    <Page.BottomAppBar>
        <AppBar x:Name="bottonBar" Padding="10,0,10,0" IsSticky="True">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button IsEnabled="True" x:Uid="btnBuyDVD" Name="btnBuyDVD"  Style="{StaticResource ShopAppBarButtonStyle}" Click="btnBuyDVD_Click_1"  />
                    <Button IsEnabled="True" x:Uid="btnMovieDetails" Name="btnMovieDetails"  Style="{StaticResource MoreAppBarButtonStyle}" Click="btnMovieDetails_Click_1" />
                    <Button IsEnabled="True" x:Uid="TraslateDetails" x:Name="TraslateDetails" Click="Translate" Style="{StaticResource SettingsAppBarButtonStyle}" Visibility="Collapsed"/>
                    <!--<Button IsEnabled="True" x:Name="btnTextSize"  Style="{StaticResource EditAppBarButtonStyle}" Click="btnTextSize_Click" ></Button>-->
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>


    <Grid x:Name="Layout"  Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" x:Name="leftColumn"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="3" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"   />
            <!--<Button Style="{StaticResource SettingsAppBarButtonStyle}" x:Name="options"
                    VerticalAlignment="Center" Grid.Column="2" AutomationProperties.Name="Options" Click="Options_Click"/>-->
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock x:Name="txtName" Style="{StaticResource SubheaderTextStyle}" VerticalAlignment="Center"/>
            <TextBlock x:Name="convertedName" Style="{StaticResource SubheaderTextStyle}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="mainStack" Orientation="Vertical" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="5" VerticalAlignment="Top" Margin="70,10,70,0" Height="404" PointerEntered="Button_visible" PointerExited="Button_collapsed">

            <!--<syncfusion:CoverFlow x:Name="CoverFlowControl" Height="400">
                <syncfusion:CoverFlow.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Height="400" />
                    </DataTemplate>
                </syncfusion:CoverFlow.ItemTemplate>
            </syncfusion:CoverFlow>-->

            <syncfusion:SfCarousel x:Name="CoverFlowControl" Height="400"
                                  VerticalAlignment="Top" 
                                  Margin="10"  SelectedIndex="20"
                                  HorizontalAlignment="Left" SelectionChanged="CoverFlowControl_SelectionChanged" DoubleTapped="btnMoreInfo_Click"
                                  >
                <syncfusion:SfCarousel.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Image}" Tag="{Binding Name}" Stretch="Uniform" />
                    </DataTemplate>
                </syncfusion:SfCarousel.ItemTemplate>
            </syncfusion:SfCarousel>
            <StackPanel x:Name="Button_stackpanel" Height="58" Margin="500,-127,500,0" RenderTransformOrigin="0.488,0.52" VerticalAlignment="Center" Visibility="Collapsed">
                <Button ToolTipService.ToolTip="" x:Uid="Play_Button" x:Name="Play_Button" Margin="84,9,82,0" HorizontalAlignment="Center" Height="40"  Click="Auto_Play">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="ms-appx:///Assets/Play.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button  x:Uid="Backward_Button" x:Name="Backward_Button" Margin="-125,-42,14,0" HorizontalAlignment="Center" Height="40" Click="BackWard_move"   >
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="ms-appx:///Assets/Fast_Backward.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button  x:Uid="Forward_Button" x:Name="Forward_Button" Margin="159,-42,14,0" HorizontalAlignment="Center" Height="40" Click="ForWard_move"   >
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="ms-appx:///Assets/Fast_Forward.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button  x:Uid="Pause_Button" x:Name="Pause_Button" Margin="84,9,82,0" HorizontalAlignment="Center" Height="40"  Visibility="Collapsed" Click="AutoStop"  >
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="ms-appx:///Assets/Pause.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>


        </StackPanel>

        <StackPanel x:Name="stackPopup" Background="Black" Width="650" Height="510" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="1" Grid.RowSpan="6"  Visibility="Collapsed" Orientation="Vertical" Margin="10,-100,10,10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnWVClose" Background="White" Foreground="Black" Content="Close" Width="70" Height="40" Click="btnClose_Click" Visibility="Visible"/>
            <WebView x:Name="movieWiki" Width="640" Height="460" Margin="0,0,0,0"/>

        </StackPanel>
        <StackPanel x:Name="snappedStack" Orientation="Vertical" VerticalAlignment="Top" Visibility="Collapsed" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="7" Margin="10,10,10,10" HorizontalAlignment="Center">
            <Image Source="/Assets/BlackLogo.png" Width="150" />
            <TextBlock Text="The movies cannot be browsed in snapped view." TextWrapping="Wrap" Style="{StaticResource AboutUsTextStyle}" Foreground="Black" FontSize="24" Margin="10,40,10,10" />
        </StackPanel>
        <ProgressRing x:Name="ProgressRing" HorizontalAlignment="Center" VerticalAlignment="Stretch" Grid.Row="3" Grid.RowSpan="2" Margin="18,70" Grid.Column="1" IsActive="True" Width="60">
            <ProgressRing.Background>
                <ImageBrush/>
            </ProgressRing.Background>
        </ProgressRing>
